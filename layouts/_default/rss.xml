{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ if eq .Title .Site.Title }}{{ .Site.Title | htmlEscape }}{{ else }}{{ with .Title }}{{ . | htmlEscape }} - {{ end }}{{ .Site.Title | htmlEscape }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Site.Params.description | default "Blog technique émergé des ténèbres du développement" | htmlEscape }}</description>
    <generator>Hugo -- gohugo.io</generator>
    {{ with .Site.LanguageCode }}<language>{{ . }}</language>{{ end }}
    {{ with .Site.Author.email }}<managingEditor>{{ . }} ({{ .Site.Author.name }})</managingEditor>{{ end }}
    {{ with .Site.Author.email }}<webMaster>{{ . }} ({{ .Site.Author.name }})</webMaster>{{ end }}
    {{ with .Site.Copyright }}<copyright>{{ . }}</copyright>{{ end }}
    {{ if not .Date.IsZero }}<lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{ with .OutputFormats.Get "RSS" -}}
      {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{ end -}}
    <!-- Flux RSS émergé des ténèbres numériques -->
    {{ $healthcheckPages := where .Site.RegularPages "Section" "healthcheck" }}
    {{ range ($healthcheckPages.ByDate.Reverse | first 20) }}
    <item>
      <title>{{ .Title | htmlEscape }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Author.email }}<author>{{ . | htmlEscape }} ({{ .Site.Author.name | htmlEscape }})</author>{{ end }}
      <guid>{{ .Permalink }}</guid>
      <description>{{ with .Description }}{{ . | htmlEscape }}{{ else }}{{ .Summary | plainify | htmlEscape }}{{ end }}</description>
      {{ if .Content }}
      <content:encoded>{{ printf "<![CDATA[%s]]>" .Content | safeHTML }}</content:encoded>
      {{ end }}
      {{ range .Params.categories }}<category>{{ . | htmlEscape }}</category>{{ end }}
      {{ range .Params.tags }}<category domain="tag">{{ . | htmlEscape }}</category>{{ end }}
    </item>
    {{ end }}
  </channel>
</rss>